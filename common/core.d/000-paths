#!/bin/sh
export STORE="$HOME/.store"

export APPSTORE="$STORE/apps"

export ENV="$HOME/.shell"

export BIN="$ENV/bin"
export APPS="$ENV/apps"
export DOTFILES="$ENV/dotfiles"
export OVERLAYS="$ENV/overlays"
export OPT="$ENV/opt"
export STORELINK="$ENV/.store"

export PROJECTS="$HOME/projects"
export NPM_MODULES=~/.npm-packages

export PATH=$BIN:$NPM_MODULES/bin:$PATH
